@model Trip
<div>

    <h1>Plan Your Wedding</h1>
    <a asp-controller="Home" asp-action="Dashboard" >Dashboard</a>
    <a asp-controller="Home" asp-action="Logout">Logout</a>

</div>


        <form asp-controller="Home" asp-action="UpdateTrip" asp-route-weddingId="@Model.TripId" class="shadow p-3 mb-5 rounded" method="POST">

            <div class="form-group">
                <label asp-for="Destination"></label>
                <span asp-validation-for="Destination" class="text-danger font-weight-bold"></span>
                <input asp-for="Destination" class="form-control">
            </div>

            <div class="form-group">
                <label asp-for="StartDate"></label>
                <span asp-validation-for="StartDate" class="text-danger font-weight-bold"></span>
                <input asp-for="StartDate" class="form-control">
            </div>

            <div class="form-group">
                <label asp-for="EndDate"></label>
                <span asp-validation-for="EndDate" class="text-danger font-weight-bold"></span>
                <input asp-for="EndDate" class="form-control">
            </div>

            <div class="form-group">
                <label asp-for="Plan"></label>
                <span asp-validation-for="Plan" class="text-danger font-weight-bold"></span>
                <input asp-for="Plan" class="form-control">
            </div>

            <button type="submit" class="btn btn-outline-success">Submit Edits</button>
        </form>  