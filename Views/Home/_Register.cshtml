@model User



<div class="container w-75">
    <h2 class="text-center">Register to get Spammed!</h2>

    <form asp-controller="Home" asp-action="Register" class="shadow p-3 mb-5 rounded" method="POST">

        <div class="form-group">
            <label asp-for="FirstName"></label>
            <span asp-validation-for="FirstName" class="text-danger font-weight-bold"></span>
            <input asp-for="FirstName"  class="form-control">
        </div>

        <div class="form-group">
            <label asp-for="LastName"></label>
            <span asp-validation-for="LastName" class="text-danger font-weight-bold"></span>
            <input asp-for="LastName"  class="form-control">
        </div>

        <div class="form-group">
            <label asp-for="Email"></label>
            <span asp-validation-for="Email" class="text-danger font-weight-bold"></span>
            <input asp-for="Email" class="form-control">
        </div>

        <div class="form-group">
            <label asp-for="Password"></label>
            <span asp-validation-for="Password" class="text-danger font-weight-bold"></span>
            <input asp-for="Password" class="form-control">
        </div>

        <div class="form-group">
            <label asp-for="PasswordConfirm"></label>
            <span asp-validation-for="PasswordConfirm" class="text-danger font-weight-bold"></span>
            <input asp-for="PasswordConfirm" class="form-control">
        </div>

        <button class="btn btn-outline-success">Register</button>
    </form>
</div>